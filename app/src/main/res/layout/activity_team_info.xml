<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_team_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_weight="20"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorLightBackground"/>


    <Button
        android:id="@+id/btn_team_info_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important Team Action"
        android:padding="16dp"
        android:textAlignment="center"
        android:gravity="bottom"
        android:paddingLeft="@dimen/button_padding_text_left_right"
        android:paddingRight="@dimen/button_padding_text_left_right"
        android:height="@dimen/button_padding_height"/>


</LinearLayout>

</android.support.v4.widget.NestedScrollView>

