<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_request_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/tv_request_team_card_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Team Invitation"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Team:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right" />

            <TextView
                android:id="@+id/tv_request_team_card_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TeamName"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Team Admin:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right" />

            <TextView
                android:id="@+id/tv_request_team_card_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="AdminHandle"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:padding="8dp" >

            <Button
                android:id="@+id/btn_request_team_card_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLightBackground"
                android:text="Decline"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/button_padding_text_left_right"
                android:paddingRight="@dimen/button_padding_text_left_right"
                android:height="@dimen/button_padding_height" />

            <Button

                android:id="@+id/btn_request_team_card_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLightBackground"
                android:text="Accept"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/button_padding_text_left_right"
                android:paddingRight="@dimen/button_padding_text_left_right"
                android:height="@dimen/button_padding_height" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
