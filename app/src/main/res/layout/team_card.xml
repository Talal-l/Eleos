<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="vertical"

        android:padding="12dp" >


        <TextView
            android:id="@+id/tv_team_card_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right" />

        <TextView
            android:id="@+id/tv_team_card_info_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_team_card_name"
            android:layout_marginTop="8dp"
            android:text="Admin: "
            android:textColor="#727272"
            android:textSize="14sp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right" />

        <TextView
            android:id="@+id/tv_team_card_admin"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_team_card_name"
            android:layout_marginTop="8dp"
            android:text="TeamAdmin"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/tv_team_card_info_admin"
            android:textSize="14sp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
