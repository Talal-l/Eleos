<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/et_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Game name: "
                    android:layout_margin="16dp"
                    android:textColor="#000000"

                    />

                <TextView
                    android:id="@+id/et_game_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Team 1: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/et_game_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Team 2: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/et_sport_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Sport type: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_game_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Date: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_game_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Time: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_game_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="Venue: "
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_margin="16dp"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:id="@+id/btn_cancel_game_info"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_weight="1"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:id="@+id/btn_confirm_game_info"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Confirm"
                        />


                </LinearLayout>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
