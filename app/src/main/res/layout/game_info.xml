<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Game name: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="GameName"
                android:textColor="#000000"
                android:textSize="14dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Game admin: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_admin_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="GameAdmin"
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Team1: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right"  />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_team1_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"
                android:text="Team1"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Team2: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_team2_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"
                android:text="Team2"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_sport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Sport: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_game_sport_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"
                android:text="Sport"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Date: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right"  />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"
                android:text="gameDate"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_game_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Time: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right"  />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_time_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"
                android:text="gameTime"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="Venue: "
                    android:textColor="#000000"
                    android:paddingLeft="@dimen/text_view_padding_left"
                    android:paddingRight="@dimen/text_view_padding_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_game_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:singleLine="true"
                android:text="GameVenue "
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="@dimen/input_text_padding_top"
                android:paddingBottom="@dimen/input_text_padding_bottom"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
