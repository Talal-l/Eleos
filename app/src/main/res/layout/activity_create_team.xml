<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team name: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/et_team_name"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="team name" />

    <TextView
        android:id="@+id/tv_team_sport"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team sport :"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_team_sport"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="team sport" />


    <TextView
        android:id="@+id/tv_game_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="player search"
        android:textSize="18sp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp"/>



    <Button
        android:id="@+id/btn_cancel_create_team"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_row="7"
        android:text="Cancel" />

    <Button
        android:id="@+id/btn_confirm_create_team"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_column="0"
        android:layout_row="7"
        android:text="Confirm" />

</GridLayout>

