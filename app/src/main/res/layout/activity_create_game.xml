<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="true"
        android:orientation="vertical" >


        <Button
            android:id="@+id/tv_create_game_main_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right"
            android:text="Pick your team"
            android:textColor="@color/textLight"
            android:textSize="@dimen/font_size_app_bar" />

        <Button
            android:id="@+id/tv_create_game_challenged_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right"
            android:text="Pick a team to challenge"
            android:textColor="@color/textLight"
            android:textSize="@dimen/font_size_app_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tv_create_game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right"
                android:text="Pick a date"
                android:textColor="@color/textLight"
                android:textSize="@dimen/font_size_app_bar" />


            <Button
                android:id="@+id/tv_create_game_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="end"
                android:paddingLeft="@dimen/text_view_padding_left"
                android:paddingRight="@dimen/text_view_padding_right"
                android:text="Pick a time"
                android:textColor="@color/textLight"
                android:textSize="@dimen/font_size_app_bar" />


        </LinearLayout>

        <Button
            android:id="@+id/tv_create_game_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="8dp"
            android:paddingLeft="@dimen/text_view_padding_left"
            android:paddingRight="@dimen/text_view_padding_right"
            android:singleLine="true"
            android:text="Add venue"
            android:textColor="@color/textLight"
            android:textSize="@dimen/font_size_app_bar" />

    </LinearLayout>

</ScrollView>