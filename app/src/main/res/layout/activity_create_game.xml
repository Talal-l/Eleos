<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <EditText
            android:id="@+id/et_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Game name"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spn_game_sport"
        android:entries="@array/sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="16dp"
        >

    </Spinner>


    <TextView
        android:id="@+id/tv_main_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick your team"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        />

    <TextView
        android:id="@+id/tv_game_challenged_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a team to challenge"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_margin="16dp"

        />
    <TextView
        android:id="@+id/tv_game_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a date"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_margin="16dp"



        />

    <TextView
        android:id="@+id/tv_game_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a time"
        android:textSize="18sp"
        android:padding="8dp"

        android:layout_margin="16dp"
        />
    <TextView
        android:id="@+id/tv_game_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:drawablePadding="8dp"
        android:text="Add venue"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_margin="16dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="16dp"
        >

    <Button
        android:layout_width="0dp"
        android:id="@+id/btn_cancel_create_game"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="0dp"
        android:id="@+id/btn_confirm_create_game"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Confirm"
        />


    </LinearLayout>


</LinearLayout>
