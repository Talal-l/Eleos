<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/game_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game name: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/game_name_input"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:hint="game name" />

    <TextView
        android:id="@+id/game_type_txt"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game type:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/game_type_input"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="game type" />

    <TextView
        android:id="@+id/number_of_players_txt"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of players:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/number_of_players_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="# of players"
        android:layout_column="1"
        android:layout_row="2"/>

    <TextView
        android:id="@+id/game_location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_column="0"
        android:layout_row="3"/>



    <TextView
        android:id="@+id/game_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/game_date_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pick a date"
        android:textSize="18sp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/location_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_column="1"
        android:layout_row="3"/>

    <TextView
        android:id="@+id/game_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/game_time_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pick a time"
        android:textSize="18sp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/Cancel_create_game_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_row="7"
        android:text="Cancel" />

    <Button
        android:id="@+id/confirm_create_game_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_column="0"
        android:layout_row="7"
        android:text="Confirm" />

</GridLayout>

